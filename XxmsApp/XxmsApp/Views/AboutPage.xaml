<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XxmsApp.Views.About">
    <ContentPage.Content>
        <StackLayout>
            <Frame x:Name="about" HasShadow="True"  Margin="15"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand">
                <Label>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="About" />
                            <Span Text=" " />
                            <Span FontAttributes="Bold">XxmsApp</Span>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </Frame>
            <Frame x:Name="frame" HasShadow="True" OutlineColor="Red"  Margin="15"
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand">
                <Label Text="Powered by Sanshain" />
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>